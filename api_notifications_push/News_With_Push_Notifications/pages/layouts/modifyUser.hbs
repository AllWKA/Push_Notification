<div class="container">
    <div class="row">
        <select class="form-control fixed-form" id="apps" onchange="showUsers()">

        </select>
    </div>
    <div class="row">
        <ul class="fixed-ul bg-cool center" id="users">

        </ul>
    </div>
    <div class="row">

        <div class="col-sm-6"><button class="btn btn-primary" onclick="deleteUser(event)">Delete</button></div>
        <div class="col-sm-6"><button class="btn btn-primary" onclick="fillForm(event)">Select to Modify</button></div>

    </div>
    <div class="row">
        <div class="card container fixed-form">
            <div class="card-header">
                <h4 class="mb-0">User Information</h4>
            </div>
            <div class="card-body fixed-form">
                <form class="form fixed-form" role="form" autocomplete="off" id="userForm">
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label">Name</label>
                        <div class="col-lg-9">
                            <input class="form-control fixed-form" type="text" name="nameUser">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label">Password</label>
                        <div class="col-lg-9">
                            <input class="form-control fixed-form" type="password" name="pwdUser">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label">Email</label>
                        <div class="col-lg-9">
                            <input class="form-control fixed-form" type="email" name="emailUser">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label form-control-label"></label>
                        <div class="col-lg-9">
                            <button class="btn btn-primary" onclick="modifyUser(event)">Modify</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>