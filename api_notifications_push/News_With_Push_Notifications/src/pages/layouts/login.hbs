<link href="../css/bootstrap-4.1.3-dist/css/bootstrap.min.css" rel="stylesheet">
<link href="../css/signin.css" rel="stylesheet">
<script src="../css/bootstrap-4.1.3-dist/js/boostrap.min.js"></script>

<title>Signin Template for Bootstrap</title>

<div class="container-fluid">
    <form class="form-signin form-background from-shadow">

        <img class="mb-4" src="media/logo-inventia-blanco.png" alt="">
        <h1 class="h3 mb-3 font-weight-normal fixed-color">Please signin</h1>

        <div class="form-group container">
            <input type="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
        </div>
        <div class="form-group container">
            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
        </div>
        <div class="checkbox mb-3">
            <label class="fixed-color">
                <input type="checkbox" value="remember-me"> Remember me</label>
        </div>
        <div class="form-group">
            <input type="submit" class="btnSubmit" value="Login" />
        </div>
        <p class="mt-5 mb-3  fixed-color">&copy; 2018-2019</p>
        <a href="notifications.hbs">aaaaa</a>
    </form>
</div>